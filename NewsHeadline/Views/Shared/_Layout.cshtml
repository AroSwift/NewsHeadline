<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - News Headline</title>

    <link href="~/lib/bootstrap-4.3.1/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/select2/select2.css" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">News Headline</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Developer">Developer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Profile" asp-action="Index">Profile</a>
                </li>
            </ul>
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <footer class="font-small blue fixed-bottom">
            <p>News Headline &copy; 2019 - By Aaron Barlow</p>
        </footer>
    </div>

    <environment include="Development">
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap-4.3.1/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap-4.3.1/js/bootstrap.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
